tab-item-left {
  position: fixed;
}

.tab-item-top {
  position: absolute;
  bottom: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 10rpx solid rgba(204, 204, 204, 0.8);
  margin: 0 24rpx;
  height: fit-content;
  background-color: rgba(255, 255, 255, 0.8);
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.icon-tab-left {
  width: 70rpx;
  height: 70rpx;
  transition: 0.5s all;
  transform-origin: center;
}

.icon-tab-middle {
  width: 90rpx;
  height: 90rpx;
  transition: 0.5s all;
  transform-origin: center;
}

.icon-tab-right {
  width: 70rpx;
  height: 70rpx;
  transition: 0.5s all;
  transform-origin: center;
}

.left {
  width: 70rpx;
  height: 70rpx;
  left: 155rpx;
  bottom: 62rpx;
}

.right {
  width: 70rpx;
  height: 70rpx;
  right: 155rpx;
  bottom: 62rpx;
}

.middle {
  width: 90rpx;
  height: 90rpx;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 52rpx;
}

.active-bottom-tab {
  border: 10rpx solid rgba(255, 142, 142, 0.8);
}
