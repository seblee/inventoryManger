<form bindsubmit="formSubmit">
  <view class="section">
    <view class="label">名称</view>
    <view class="input-field">
      <input 
        class="input-sum"
        name="categoryName"
        type="text"
        value="{{categoryName}}"
        maxlength="10"
        bindinput="inputName"
        placeholder="请输入名称" 
      >
      </input>
    </view>
  </view>
  <view class="section">
    <view class="label">条码</view>
    <view class="input-field">
      <input 
        class="input-sum"
        name="barCode"
        type="text"
        value="{{barCode}}"
        maxlength="30"
        bindinput="inputBarCode"
        placeholder="条码/或者序列号" 
      >
      </input>
    </view>
  </view>
  <view class="section"> 
      <view class="label">单位</view>
    <view class="input-field">
      <picker bindchange="bindPickerChange" value="{{unitIndex}}" range="{{unitArray}}">
        <view class="input-sum">
          {{unitArray[unitIndex]}}
        </view>
      </picker>
    </view>      
  </view>
  <view class="section">
    <view class="label">描述</view>
    <view class="input-field">
      <input 
        class="input-sum"
        name="description"
        type="text"
        value="{{description}}"
        maxlength="15"
        bindinput="inputDescription"        
        placeholder="简要备注说明"
      >
      </input>
    </view>
  </view>
  <view class="btn-area">
    <button class="warn" form-type="submit">添加</button> 
  </view>
  <view class="btn-area">
    <button class="warn" bindtap="scanCode">扫码输入序列号</button> 
  </view>
</form> 

 